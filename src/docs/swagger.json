{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for a Bible API system, powered by Gin and GORM.",
        "title": "Bible System API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "https://github.com/your-repo",
            "email": "rayselfs@alive.org.tw"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/versions/{version}/books/{book}/chapters/{chapter}": {
            "get": {
                "description": "根據指定的譯本、書卷和章數，取得完整的章節內容",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Bible"
                ],
                "summary": "取得聖經章節",
                "parameters": [
                    {
                        "type": "string",
                        "description": "譯本代碼 (e.g., cuv, kjv)",
                        "name": "version",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "書卷名稱或縮寫 (e.g., Genesis, Gen)",
                        "name": "book",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "章數",
                        "name": "chapter",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功取得章節內容",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.ApiResponseVerse"
                            }
                        }
                    },
                    "400": {
                        "description": "輸入參數無效",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "找不到指定的章節",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "伺服器內部錯誤",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/search": {
            "get": {
                "description": "在指定的譯本中，根據關鍵字搜尋相關經文",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Bible"
                ],
                "summary": "搜尋經文",
                "parameters": [
                    {
                        "type": "string",
                        "description": "譯本代碼 (e.g., cuv, kjv)",
                        "name": "version",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "搜尋的關鍵字",
                        "name": "q",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功取得搜尋結果",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.ApiResponseVerse"
                            }
                        }
                    },
                    "400": {
                        "description": "輸入參數無效",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "伺服器內部錯誤",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/versions": {
            "get": {
                "description": "列出系統中所有可用的聖經譯本及其代碼",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Bible"
                ],
                "summary": "取得所有聖經譯本",
                "responses": {
                    "200": {
                        "description": "成功取得譯本列表",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Versions"
                            }
                        }
                    },
                    "500": {
                        "description": "伺服器內部錯誤",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.ApiResponseVerse": {
            "type": "object",
            "properties": {
                "book": {
                    "type": "string",
                    "example": "Genesis"
                },
                "chapter": {
                    "type": "integer",
                    "example": 1
                },
                "text": {
                    "type": "string",
                    "example": "In the beginning God created the heaven and the earth."
                },
                "verse": {
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "models.Locales": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string",
                    "example": "en"
                },
                "name": {
                    "type": "string",
                    "example": "English"
                }
            }
        },
        "models.Versions": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "locale": {
                    "$ref": "#/definitions/models.Locales"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "server.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "error message"
                }
            }
        }
    }
}